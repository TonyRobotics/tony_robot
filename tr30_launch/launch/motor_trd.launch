<?xml version="1.0"?>
<launch>
    <arg name="serialport_name" default="/dev/ttyUSB0" />
    <arg name="baudrate" default="38400"/>
    <node pkg="trd_diff_controller" type="trd_diff_controller_node" name="trd_diff_controller_node">
        <param name="serialport_name" value="$(arg serialport_name)"/>
        <param name="baudrate" value="$(arg baudrate)"/>
        <param name="linear_coef" value="166.4" />
        <param name="angular_coef" value="28.2" />
        <param name="encoder_ticks_per_rev" value="3136" />
        <param name="base_width" value="0.34" />
        <param name="wheel_diameter" value="0.125" />
    </node>
</launch>

