<?xml version="1.0"?>
<launch>
    <param name="use_sim_time" value="false" />
    
    <!-- motor trd -->
    <include file="$(find tr30_launch)/launch/motor_trd.launch">
        <arg name="serialport_name" value="/dev/motor_trd" />
        <arg name="baudrate" value="38400"/>
        <arg name="left_coef" value="1.0" />
        <arg name="right_coef" value="1.0" />
        <arg name="linear_coef" value="166.4" />
        <arg name="angular_coef" value="28.2" />
        <arg name="encoder_ticks_per_rev" value="3136" />
        <arg name="base_width" value="0.34" />
        <arg name="wheel_diameter" value="0.125" />
    </include>

    <!-- laser leishen -->
    <!--
    <include file="$(find tr30_launch)/launch/laser_leishen.launch">
        <arg name="laserPort_" value="/dev/ttyUSB1"/>
        <arg name="rate" value="10.0"/>
    </include>
    -->
  
    <!-- ultrasound -->
    <include file="$(find tr30_launch)/launch/ultrasound.launch">
        <arg name="port" value="/dev/ttyUSB1"/>
        <arg name="baud" value="57600"/>
    </include>

    <!-- infrared -->
    <include file="$(find tr30_launch)/launch/docking_infrared.launch">
        <arg name="serialport_name" value="/dev/ttyUSB2" />
    </include>

    <!-- astra RGB-D -->
    <include file="$(find tr30_launch)/launch/rgbd_astra.launch">
    </include>
    
    <!-- mapping -->
    <node pkg="hector_mapping" type="hector_mapping" name="hector_mapping">
    </node>

    <!-- move_base -->
    <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen" clear_params="true"> 
        <rosparam file="$(find tr30_launch)/config/costmap_common_params.yaml" command="load" ns="global_costmap" />
        <rosparam file="$(find tr30_launch)/config/costmap_common_params.yaml" command="load" ns="local_costmap" />
        <rosparam file="$(find tr30_launch)/config/local_costmap_params.yaml" command="load" />
        <rosparam file="$(find tr30_launch)/config/global_costmap_params.yaml" command="load" />
        <rosparam file="$(find tr30_launch)/config/base_local_planner_params.yaml" command="load" />
    </node>
  
</launch>

