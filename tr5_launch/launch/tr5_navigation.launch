<?xml version="1.0"?>
<launch>
    <param name="use_sim_time" value="false" />
    
    <!-- start up tr5 driver -->
    <include file="$(find tr5_launch)/launch/tr5_minimal.launch" />
  
    <!--
    <node pkg="map_server" type="map_server" name="map_server"
        args="$(find tr10_launch)/maps/map_2105_leishen.yaml" />
    -->

    <node pkg="map_server" type="map_server" name="map_server"
        args="/home/pi/map_small.yaml" />

    <node pkg="amcl" type="amcl" name="amcl" >
        <remap from="scan" to="scan" />
    </node>
    
    <!-- move_base -->
    <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen" clear_params="true"> 
        <rosparam file="$(find tr5_launch)/config/costmap_common_params.yaml" command="load" ns="global_costmap" />
        <rosparam file="$(find tr5_launch)/config/costmap_common_params.yaml" command="load" ns="local_costmap" />
        <rosparam file="$(find tr5_launch)/config/local_costmap_params.yaml" command="load" />
        <rosparam file="$(find tr5_launch)/config/global_costmap_params.yaml" command="load" />
        <rosparam file="$(find tr5_launch)/config/base_local_planner_params.yaml" command="load" />
    </node>
  
</launch>

